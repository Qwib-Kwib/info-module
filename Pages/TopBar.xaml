<Page x:Class="Info_module.Pages.TopBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Info_module.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="800"
      Title="TopBar" Height="100">

    <Grid Grid.Row="0" Background="#FF0037c6" Height="100">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="104"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>

        </Grid.ColumnDefinitions>
        <Button x:Name="btnSideBar" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="btnSideBar_Click">
            <Image Source="../Images/Burger.png" Height="76" Width="76"/>
        </Button>
        <Image Source="../Images/CPU_LOGO.png" Grid.Column="1" Margin="10,10,10,10"/>
        <TextBlock x:Name="txtPageTitle" Grid.Column="2" Margin="10,20,40,20" TextWrapping="Wrap" FontSize="40" Foreground="White"/>
        <Button x:Name="btnBack" Grid.Column="3" Background="{x:Null}" BorderBrush="{x:Null}" Click="btnBack_Click">
            <Grid>
                <Image Source="../Images/back.png" Margin="30,30,30,26"/>
            </Grid>
        </Button>
    </Grid>
</Page>
